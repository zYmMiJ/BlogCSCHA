@model IEnumerable<Post>

@{
    ViewBag.Title = "DotNet Blog Website";
    ViewBag.Description = "The Blogoss";
    ViewBag.Keywords = "blog travel programming game";
}

@*<h2> HOME PAGE </h2>
<img src="~/content/static/123853.jpg" width="500" />*@
<div class="main-img">
    <span class="title">Blog de la hess</span>
</div>
<div class="container">
    @foreach (var post in Model)
    {
        var image_path = $"/Image/{post.Image}";

        <a class="post" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
            <img src="@image_path" width="500" />
            <span class="title">
            @post.Title
            </span>
        </a>
    }
</div>