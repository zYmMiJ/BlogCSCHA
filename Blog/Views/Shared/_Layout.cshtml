<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <link href="~/content/css/site.css" rel="stylesheet" />
    <link href="~/content/css/materialize.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="~/content/js/materialize.js"></script>
</head>
<body>
    <div>
        <nav>
            <div class="nav-wrapper">
                <a asp-controller="Home" asp-action="Index" class="brand-logo">Blog de la hess</a>
                <ul id="nav-mobile" class="hide-on-med-and-down" style="margin-left: 25vh;">
                    <li>
                        <img src="~/content/static/logo.png" style="width: 6vh" />
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Index" asp-route-category="Programing">Programmation</a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Index" asp-route-category="Game">Jeux</a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Index" asp-route-category="Travel">Voyage</a>
                    </li>

                </ul>
                <ul id="nav-mobile" class="right hide-on-med-and-down">

                    <li>
                        <a asp-controller="Home" asp-action="Index">Accueil</a>
                    </li>
                    <li>
                        <a href="mailto:san@antonio.net">Contact</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-controller="Panel" asp-action="Index" asp-route-category="Panel">Gestion des articles</a>
                            </li>

                        }

                        <li> <a asp-controller="Auth" asp-action="Logout">Déconnexion</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Auth" asp-action="Login">Connexion</a></li>
                    }


                </ul>
            </div>
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", false);
</body>
</html>
